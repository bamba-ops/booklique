<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color (gray) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Light gray color -->
            <corners android:radius="8dp" />   <!-- Rounded corners, optional -->
        </shape>
    </item>

    <!-- Centered text overlay -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@android:drawable/ic_menu_gallery" /> <!-- Placeholder icon -->
    </item>
</layer-list>
