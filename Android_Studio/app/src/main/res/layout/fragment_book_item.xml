<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="804dp"
        android:layout_height="310dp"
        android:background="#FFFFFF"
        android:margin="4dp"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="2dp">


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="28dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="161dp"
            android:layout_height="209dp"
            android:src="@drawable/sample_book_cover"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre: WALK INTO THE SHADOW"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="36dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre: Fantasy"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="91dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auteur: Mike Ricksecker"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Good"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="755dp"
            tools:layout_editor_absoluteY="207dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter au panier"
            tools:layout_editor_absoluteX="632dp"
            tools:layout_editor_absoluteY="237dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="244dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
