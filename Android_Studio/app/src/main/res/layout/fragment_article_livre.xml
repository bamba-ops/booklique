<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image du livre -->
        <ImageView
            android:id="@+id/livre_image"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Image du livre" />

        <!-- Informations du livre -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Titre du livre -->
            <TextView
                android:id="@+id/livre_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre du livre"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Auteur du livre -->
            <TextView
                android:id="@+id/livre_auteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auteur"
                android:textColor="#616161"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Genre du livre -->
            <TextView
                android:id="@+id/livre_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:layout_marginTop="4dp"
                android:textColor="#757575"
                android:textSize="13sp"
                android:background="@drawable/arriere_fond_rond_genre"
                android:padding="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
