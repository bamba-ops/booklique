<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".PrÃ©sentation.Recherche.Vue">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/barre_de_recherche_rond"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnRecherche"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_weight="90"
            android:background="#10B62E2E"
            android:src="@drawable/baseline_search_24" />

        <AutoCompleteTextView
            android:id="@+id/entree_recherche"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:background="@drawable/barre_de_recherche_rond"
            android:hint="@string/search_hint"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="212dp"
        android:layout_height="47dp"
        android:layout_marginTop="152dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioTitre"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="Titre" />

        <RadioButton
            android:id="@+id/radioAuteur"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:text="Auteur" />

    </RadioGroup>

    <Button
        android:id="@+id/btnGenre"
        android:layout_width="101dp"
        android:layout_height="47dp"
        android:layout_below="@+id/radioGroup"
        android:backgroundTint="@color/material_dynamic_tertiary60"
        android:text="Genres"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />


    <TextView
        android:id="@+id/texte_recherche_utilisateur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="16dp"
        android:text="@string/search_label"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_recherche_par_defaut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texte_recherche_utilisateur"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/no_books_found"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/chargement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/affichage_defilement_resultat_de_recherche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnGenre"
        android:layout_marginTop="16dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/resultat_de_recherche_conteneur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>
