<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".Présentation.Recherche.Vue">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/barre_de_recherche_rond"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_recherche"
            android:contentDescription="Icône de recherche" />

        <AutoCompleteTextView
            android:id="@+id/entree_recherche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rechercher un livre ou un auteur"
            android:padding="12dp"
            android:background="@drawable/barre_de_recherche_rond"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_recherche_par_defaut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:text="Aucun livre"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/affichage_defilement_resultat_de_recherche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/resultat_de_recherche_conteneur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</RelativeLayout>
