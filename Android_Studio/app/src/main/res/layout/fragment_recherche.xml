<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vue">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#FF0000">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/panier"
            tools:layout_editor_absoluteX="363dp"
            tools:layout_editor_absoluteY="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Second LinearLayout (Search Bar below the Navigation Bar) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#F0D8B4">

        <EditText
            android:id="@+id/editText"
            android:layout_width="290dp"
            android:layout_height="41dp"
            android:drawableStart=""
            android:hint="Search"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="7dp" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="171dp"
            android:layout_height="42dp"
            android:text="Tout sÃ©lectionner"
            android:textColorLink="#673AB7"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="57dp" />

        <Button
            android:id="@+id/btnEfaccer"
            android:layout_width="171dp"
            android:layout_height="42dp"
            android:text="Tout effacer"
            tools:layout_editor_absoluteX="214dp"
            tools:layout_editor_absoluteY="56dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="52dp"
            android:layout_height="43dp"
            android:background="#F8FFFFFF"
            android:src="@drawable/search"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="7dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
