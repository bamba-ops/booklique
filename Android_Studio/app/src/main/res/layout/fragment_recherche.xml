<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PrÃ©sentation.Recherche.Vue">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="212dp"
        android:layout_height="47dp"
        android:layout_marginTop="152dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioTitre"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="Titre" />

        <RadioButton
            android:id="@+id/radioAuteur"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:text="Auteur" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="351dp"
        android:layout_height="0dp"
        android:background="@drawable/barre_de_recherche_rond"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="85dp">

        <ImageButton
            android:id="@+id/btnRecherche"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_weight="90"
            android:background="#10B62E2E"
            android:src="@drawable/baseline_search_24" />

        <AutoCompleteTextView
            android:id="@+id/entree_recherche"
            android:layout_width="278dp"
            android:layout_height="67dp"
            android:background="@drawable/barre_de_recherche_rond"
            android:hint="@string/search_hint"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/texte_recherche_utilisateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/search_label"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="272dp" />

    <TextView
        android:id="@+id/text_recherche_par_defaut"
        android:layout_width="170dp"
        android:layout_height="31dp"
        android:layout_marginTop="200dp"
        android:text="@string/no_books_found"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/chargement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/affichage_defilement_resultat_de_recherche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/texte_recherche_utilisateur"
        android:visibility="gone"
        tools:layout_editor_absoluteY="16dp">

    </ScrollView>

    <LinearLayout
        android:id="@+id/resultat_de_recherche_conteneur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnGenre"
        android:layout_width="101dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/material_dynamic_tertiary60"
        android:text="Genres"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

</androidx.constraintlayout.widget.ConstraintLayout>
