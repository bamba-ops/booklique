<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/text_critere_recherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Critère de recherche : "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_recherche_par_defaut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucun résultat trouvé."
        android:visibility="gone"
        android:padding="16dp" />

    <ProgressBar
        android:id="@+id/chargement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/affichage_defilement_resultat_de_recherche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/resultat_de_recherche_conteneur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>
